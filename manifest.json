{
    "notes": [
        "CEBS sandbox manifest",
        "see https://github.com/NIEHS/niehs-gen3"
    ],
    "jenkins": {
        "autodeploy": "yes"
    },
    "versions": {
        "arborist": "quay.io/cdis/arborist:2021.11",
        "aws-es-proxy": "quay.io/cdis/aws-es-proxy:v1.3.1",
        "fence": "quay.io/cdis/fence:2021.11",
        "indexd": "quay.io/cdis/indexd:2021.11",
        "peregrine": "quay.io/cdis/peregrine:2021.11",
        "pidgin": "quay.io/cdis/pidgin:2021.11",
        "revproxy": "quay.io/cdis/nginx:2021.11",
        "sheepdog": "quay.io/cdis/sheepdog:2021.11",
        "portal": "quay.io/cdis/data-portal:2021.11",
        "fluentd": "fluent/fluentd-kubernetes-daemonset:v1.2-debian-cloudwatch",
        "spark": "quay.io/cdis/gen3-spark:2021.11",
        "wts": "quay.io/cdis/workspace-token-service:2021.11",
        "manifestservice": "quay.io/cdis/manifestservice:2021.11",
        "tube": "quay.io/cdis/tube:2021.11",
        "guppy": "quay.io/cdis/guppy:2021.11",
        "sower": "quay.io/cdis/sower:2021.11",
        "ssjdispatcher": "quay.io/cdis/ssjdispatcher:2021.11",
        "metadata": "quay.io/cdis/metadata-service:2021.11"
    },
    "arborist":{
        "deployment_version": "2"
    },
    "ssjdispatcher": {
        "job_images": {
          "indexing": "quay.io/cdis/indexs3client:2021.11"
        }
      },
      "sower": [
        {
          "name": "pelican-export",
          "action": "export",
          "container": {
            "name": "job-task",
            "image": "quay.io/cdis/pelican-export:2021.11",
            "pull_policy": "Always",
            "env": [
              {
                "name": "DICTIONARY_URL",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "manifest-global",
                    "key": "dictionary_url"
                  }
                }
              },
              {
                "name": "GEN3_HOSTNAME",
                "valueFrom": {
                  "configMapKeyRef": {
                    "name": "manifest-global",
                    "key": "hostname"
                  }
                }
              },
              {
                "name": "ROOT_NODE",
                "value": "subject"
              }
            ],
            "volumeMounts": [
              {
                "name": "pelican-creds-volume",
                "readOnly": true,
                "mountPath": "/pelican-creds.json",
                "subPath": "config.json"
              },
              {
                "name": "peregrine-creds-volume",
                "readOnly": true,
                "mountPath": "/peregrine-creds.json",
                "subPath": "creds.json"
              }
            ],
            "cpu-limit": "1",
            "memory-limit": "4Gi"
          },
          "volumes": [
            {
              "name": "pelican-creds-volume",
              "secret": {
                "secretName": "pelicanservice-g3auto"
              }
            },
            {
              "name": "peregrine-creds-volume",
              "secret": {
                "secretName": "peregrine-creds"
              }
            }
          ],
          "restart_policy": "Never"
        }
      ],
    "global": {
        "environment": "ntpdev",
        "hostname": "ntpdc.org",
        "revproxy_arn": "add aws arn here",
        "dictionary_url": "https://niehs-dictionary-artifacts.s3.amazonaws.com/ntp_dictionary/1.2/schema.json",
        "portal_app": "gitops",
        "kube_bucket": "kube-ntpdev-gen3",
        "logs_bucket": "logs-ntpdev-gen3",
        "sync_from_dbgap": "False",
        "useryaml_s3path": "s3://niehs-dictionary-artifacts/ntp_dictionary/1.2/user.yaml",
        "GEN3_DEBUG": "False",
        "dispatcher_job_num": "10",
        "netpolicy": "on"
    },
    "canary": {
        "default": 0
    },
    "guppy": {
        "indices": [
            {
                "index": "subject_etl",
                "type": "subject"
            },
            {
                "index": "publication_etl",
                "type": "publication"
            },
            {
                "index": "file_etl",
                "type": "file"
            }
        ],
        "config_index": "etl_array-config",
        "auth_filter_field": "auth_resource_path"
    }
}
